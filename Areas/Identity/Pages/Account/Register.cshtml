@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    //Layout = "~/Views/Shared/_AdminLTE.cshtml";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";

}


    <div class="hold-transition register-page">
        @*<div>
            <span>
                <img src="./Images/tms_logo.png" alt="TMS" />
            </span>
        </div>*@
        <div class="row" >
            <div class="=col-md-6">
                <img src="~/Images/tms_logo.png" style="width:80px;">

            </div>
            <div class="=col-md-6" style="position:relative">
                <span style="position:absolute; bottom:0;">
                    <h1 style="font-family: Impact, Charcoal, sans-serif">PMS</h1>
                </span>            
            </div>
        </div>
        <h4 style="font-family: Impact, Charcoal, sans-serif">Project Management System</h4>

        <div class="register-box">
            <div class="register-logo">
               @* <h1 style="font-family: Impact, Charcoal, sans-serif">Project Management System</h1>*@
            </div>

            <div class="card border-info">
                <div class="card-body register-card-body">
                    <div class="text-center">
                        <h5>
                            Create a New Account
                        </h5>
                    </div>
                    <hr />
                    @*<p class="login-box-msg">Register a new User</p>*@

                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form method="post">
                        <div class="input-group mb-3">
                            <input asp-for="Input.FirstName" class="form-control" placeholder="First name">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-user"></span>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>

                        <div class="input-group mb-3">
                            <input asp-for="Input.LastName" class="form-control" placeholder="Last name">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-user"></span>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>

                        <div class="input-group mb-3">
                            <input asp-for="Input.Email" class="form-control" placeholder="Email">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>

                        <div class="input-group mb-3">
                            <input asp-for="Input.Password" class="form-control" placeholder="Password">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>

                        <div class="input-group mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Retype password">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                        <div class="row">
                            <button type="submit" class="btn btn-success btn-block">Register</button>
                        </div>
                    </form>



                    <a asp-page="./Login" class="text-center">I already have an account</a>
                </div>
                <!-- /.form-box -->
            </div><!-- /.card -->
        </div>
    </div> 




