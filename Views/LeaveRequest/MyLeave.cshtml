@model EmployeeLeaveRequestViewModel

@{
    ViewData["Title"] = "MyLeave";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>MyLeave</h1>

<div class="jumbotron">
    <div class="card">
        <ul class="list-group list-group-flush">
            @foreach (var item in Model.LeaveAllocations)
            {
                <li class="list-group-item">
                    <h6>
                        @item.LeaveType.Name
                        <span class="badge badge-secondary">@item.NumberOfDays</span>
                    </h6>
                </li>
            }
        </ul>
    </div>
</div>

@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@
<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                Leave Type
            </th>

            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>

            <th>
                Date Requested
            </th>

            <th>
                Approval status
            </th>
            <th>
                Cancel Request
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LeaveRequests)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LeaveType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DateRequested)
                </td>

                <td>
                    @if (item.Approved == true)
                    {
                        <span class="badge badge-success">Approved</span>
                    }
                    else if (item.Approved == false)
                    {
                        <span class="badge badge-danger">Rejected</span>
                    }
                    else
                    {
                        <span class="badge badge-warning">Pending Approval</span>
                    }
                </td>

                <td>
                    @if (item.StartDate > DateTime.Now || item.Approved == true)
                    {
                        <a asp-action="CancelRequest" asp-route-id="@item.Id" class="btn btn-danger"
                           onclick="return confirm('Are you sure you want to delete this record?')">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                            Cancel Request
                        </a>
                    }



                    @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                </td>
            </tr>
        }
    </tbody>
</table>

