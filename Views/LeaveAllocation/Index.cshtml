@model PMS.Models.CreateAllocationViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
        
            <th>
                Leave Types
            </th>      
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LeaveTypes) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
               @* @Html.ActionLink("Allocate to Employees", "SetLeave", new { id=item.Id })*@ 
                <a class="btn btn-outline-success" asp-action="SetLeave" asp-route-id="@item.Id">
                    <i class="fa fa-pencil">Allocate to Employees</i>
                </a>

            </td>
        </tr>
}
    </tbody>
</table>
